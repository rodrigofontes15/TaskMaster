@model IEnumerable<TaskMaster.Models.Bugs>
@*
    NOTA DO PROFESSOR DO CURSO (MOSH): I've set the model for this view to IEnumerable.
    This is a simple interface implemented by the list class. Since
    in this view we only want to iterate over this list, and we don't
    need any of the operations in the List class (eg Add, Remove, etc),
    it's better to use the IEnumerable interface, which allows use to
    iterate over the list. If in the future, we replace the List with a
    different data structure, as long as it is enumerable, our view code
    will remain unchanged.
*@

@{
    ViewBag.Title = "Bugs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (!Model.Any())
{
    <h2>Nenhum Bug Encontrado!</h2>
}
else
{
    foreach (var bug in Model)
    {
        <h2>Bugs encontrados na Task <p><b>@bug.Tasks.NomeTask</b></p></h2>
    }
}
@if (!Model.Any())
{
    
}
else
{
    <p>
        @Html.ActionLink("Reportar Bug", "NovoBug", "Bugs", null, new { @class = "btn btn-primary" })
    </p>
    <table id="bugs" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Projeto Relacionado</th>
                <th>Task Relacionada</th>
                <th>Descrição do Bug</th>
                <th>Data do Bug</th>
                <th>Data Estimada para Resolução</th>
                <th>DEV Responsável</th>
                <th>URL do Repositório</th>
                <th>Estado da Correção</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bug in Model)
            {
                <tr>
                    <td>@Html.ActionLink(bug.Tasks.Projetos.NomeProjeto, "Detalhes", "Projetos", new { id = bug.Tasks.ProjetosId }, null)</td>
                    <td>@Html.ActionLink(bug.Tasks.NomeTask, "Detalhes", "Tasks", new { id = bug.TasksId }, null) </td>
                    <td>
                        @bug.DescBug<br />
                        @Html.ActionLink("Editar", "Editar", "Bugs", new { id = bug.BugsId }, null)
                    </td>
                    <td>@bug.DataBug</td>
                    <td>@bug.DataEstimada</td>
                    <td>@bug.Devs.DevNome</td>
                    <td>@bug.UrlRepoCodigo</td>
                    <td>Estados: Aberto, Correção em Andamento, Fechado</td>
                    <td>
                        <button data-bug-id="@bug.BugsId" class="btn-link js-excluir">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            var tabela = $("#bugs").DataTable({
                "language": {
                    "emptyTable": "Nenhum registro encontrado!",
                    "search": "Buscar:",
                    "info": "Mostrando página _PAGE_ de _PAGES_",
                    "lengthMenu": "Mostrando _MENU_ registros",
                    "paginate": {
                        "first": "Primeira",
                        "last": "Ultima",
                        "next": "Próxima",
                        "previous": "Anterior"
                    }
                }
            });
            $("#bugs .js-excluir").on("click", function () {
                var button = $(this);
                bootbox.confirm("Confirma a Exclusão da Task?", function (resultado) {
                    if (resultado) {
                        $.ajax({
                            url: "/api/bugs/" + button.attr("data-bug-id"),
                            method: "DELETE",
                            success: function () {
                                tabela.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}